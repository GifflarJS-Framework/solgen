{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./bin",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "types": ["jest"],
    "paths": {
      "@models/*": ["modules/models/*"],
      "@writers/*": ["modules/writers/*"],
      "@compiler": ["modules/compiler"],
      "@deployer": ["modules/deployer"],
      "@managing/*": ["modules/managing/*"],
      "@utils/*": ["utils/*"],
      "@test/*": ["test/*"]
    },
    "typeRoots": ["./src/types"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["./bin/index.ts"],
  "include": [
    "node_modules/@types",
    "src/**/**.ts",
    "src/test/unit/models/assignment.spec.js"
  ]
}
