{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "types": ["jest"],
    "paths": {
      "@models/*": ["modules/models/*"],
      "@writers/*": ["modules/writers/*"],
      "@compiler": ["modules/compiler"],
      "@deployer": ["modules/deployer"],
      "@managing/*": ["modules/managing/*"],
      "@utils/*": ["utils/*"],
      "@test/*": ["test/*"]
    },
    "typeRoots": ["./src/types"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "./bin/index.ts"
  ],
  "include": ["node_modules/@types", "src/**/**.ts", "src/test/unit/models/assignment.spec.js"]
}
